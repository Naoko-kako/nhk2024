#include "mbed.h"
#include "platform/mbed_thread.h"


// Blinking rate in milliseconds
#define BLINKING_RATE_MS       500

float   PIN_B,PIN_R,PIN_G,PIN_C;
/*prottype call*/
void seiten();
void hanten();
void seitenGO();
void hantenGO();

PwmOut PIN_B(PB_3); //D3
PwmOut PIN_R(PB_4); //D5
PwmOut PIN_G(PB_10); //D6
PwmOut PIN_C(PC_7); //D9

int wait_time = 25;

int main()
{
    
    seiten();
    return 0;
 
}

void seiten(){

//step1
  PIN_B = 1;
  PIN_R = 0;
  PIN_G = 0;
  PIN_C = 0.3;
  

//step2
  PIN_B = 1;
  PIN_R = 0.3;
  PIN_G = 0;
  PIN_C = 0;
  

//step3
  PIN_B = 0;
  PIN_R = 0.3;
  PIN_G = 1;
  PIN_C = 0;
  

//step4
  PIN_B = 0;
  PIN_R = 0;
  PIN_G = 1;
  PIN_C = 0.3;
  

  

}

void seitenGO(){
  for(int i=0;i<17;i++){
    //step1
    PIN_B = 1;
    PIN_R = 0;
    PIN_G = 0;
    PIN_C = 0.3;
    

    //step2
    PIN_B = 1;
    PIN_R = 0.3;
    PIN_G = 0;
    PIN_C = 0;
    

    //step3
    PIN_B = 0;
    PIN_R = 0.3;
    PIN_G = 1;
    PIN_C = 0;
   

    //step4
    PIN_B = 0;
    PIN_R = 0;
    PIN_G = 1;
    PIN_C = 0.3;
    
    }

}

void hanten(){

//step2
  PIN_B = 1;
  PIN_R = 0.3;
  PIN_G = 0;
  PIN_C = 0;


//step1
  PIN_B = 1;
  PIN_R = 0;
  PIN_G = 0;
  PIN_C = 0.3;
  


//step4
  PIN_B = 0;
  PIN_R = 0;
  PIN_G = 1;
  PIN_C = 0.3;
  


//step3
  PIN_B = 0;
  PIN_R = 0.3;
  PIN_G = 1;
  PIN_C = 0;


}

void hantenGO(){
  for(int i=0;i<17;i++){
 

 //step2
    PIN_B = 1;
    PIN_R = 0.3;
    PIN_G = 0;
    PIN_C = 0;
    

 //step1
    PIN_B = 1;
    PIN_R = 0;
    PIN_G = 0;
    PIN_C = 0;
    


//step4
    PIN_B = 0;
    PIN_R = 0;
    PIN_G = 1;
    PIN_C = 0.3;
    

    
//step3
    PIN_B = 0;
    PIN_R = 0.3;
    PIN_G = 1;
    PIN_C = 0;
    
  }

    
}

